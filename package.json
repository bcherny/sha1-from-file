{
  "name": "sha1-from-file",
  "version": "2.0.1",
  "description": "Generate a short sha1 hash from a file's contents",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "build": "rm ./*.d.ts; tsc",
    "lint": "tslint index.ts",
    "test": "npm run build && npm run lint && ava test.js",
    "tdd": "nodemon *.js --exec ava test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcherny/sha1-from-file.git"
  },
  "keywords": [
    "sha1",
    "hash",
    "file",
    "contents",
    "md5",
    "7",
    "digit",
    "digest",
    "short",
    "checksum"
  ],
  "author": "Boris Cherny <boris@performancejs.com>",
  "license": "CC-BY-4.0",
  "bugs": {
    "url": "https://github.com/bcherny/sha1-from-file/issues"
  },
  "homepage": "https://github.com/bcherny/sha1-from-file#readme",
  "engines": {
    "node": ">= 4.0.0"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "nodemon": "^1.11.0",
    "tslint": "^4.4.2",
    "typescript": "^2.1.6"
  },
  "dependencies": {
    "@types/node": "^7.0.5"
  }
}
